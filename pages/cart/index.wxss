page {
  padding-bottom: 90rpx;
}
.get_address .address_btn {
  padding: 20rpx;
}
.get_address .address_btn button {
  width: 60%;
  font-weight: 100;
}
.get_address .user_info_wrap {
  padding: 20rpx;
  display: flex;
}
.get_address .user_info_wrap .user_info {
  flex: 5;
}
.get_address .user_info_wrap .user_phone {
  flex: 3;
  text-align: right;
}
.cart_content .cart_title {
  padding: 20rpx;
  font-size: 36rpx;
  color: red;
  border-top: 1px solid #ccc;
  border-bottom: 1px solid #ccc;
}
.cart_content .cart_main .cart_item {
  display: flex;
  border-bottom: 1px solid #ccc;
}
.cart_content .cart_main .cart_item .cart_chk_wrap {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cart_content .cart_main .cart_item .cart_img_wrap {
  flex: 2;
  display: flex;
  align-items: center;
  justify-content: center;
}
.cart_content .cart_main .cart_item .cart_img_wrap image {
  width: 80%;
}
.cart_content .cart_main .cart_item .cart_info_wrap {
  flex: 4;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.cart_content .cart_main .cart_item .cart_info_wrap .goods_name {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  color: #666;
  overflow: hidden;
}
.cart_content .cart_main .cart_item .cart_info_wrap .goods_price_wrap {
  display: flex;
  justify-content: space-between;
}
.cart_content .cart_main .cart_item .cart_info_wrap .goods_price_wrap .goods_price {
  color: red;
  font-size: 34rpx;
}
.cart_content .cart_main .cart_item .cart_info_wrap .goods_price_wrap .cart_num_tool {
  display: flex;
}
.cart_content .cart_main .cart_item .cart_info_wrap .goods_price_wrap .cart_num_tool .num_edit {
  height: 55repx;
  width: 55rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 1px solid #ccc;
}
.cart_content .cart_main .cart_item .cart_info_wrap .goods_price_wrap .cart_num_tool .goods_num {
  height: 55repx;
  width: 55rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.footer_tool {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 90rpx;
  display: flex;
  border-top: 1px solid #ccc;
}
.footer_tool .all_chk_wrap {
  padding: 10rpx;
  flex: 2;
  display: flex;
  align-items: center;
}
.footer_tool .total_price_wrap {
  padding: 10rpx;
  flex: 4;
  text-align: right;
}
.footer_tool .total_price_wrap .total_price .total_price_text {
  font-weight: 600;
  color: red;
  font-size: 32rpx;
}
.footer_tool .order_pay_wrap {
  flex: 3;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: red;
  font-size: 32rpx;
  color: #fff;
}
