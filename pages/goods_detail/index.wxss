page {
  padding-bottom: 90rpx;
}
.swiper swiper {
  height: 50vw;
  text-align: center;
}
.swiper swiper image {
  width: 70%;
}
.good_price {
  padding: 15rpx;
  font-weight: 600;
  color: red;
  font-size: 32rpx;
}
.good_name_wrap {
  display: flex;
  border-top: 1px solid #dedede;
  border-bottom: 1px solid #dedede;
  padding: 15rpx 0;
}
.good_name_wrap .good_name {
  flex: 5;
  color: #000;
  font-size: 30rpx;
  padding: 0 15rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.good_name_wrap .good_collect {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  border-left: 1px solid #000;
}
.good_name_wrap .good_collect .collect_text {
  margin-top: 10rpx;
}
.goods_info .goods_info_title {
  color: red;
  font-size: 32rpx;
  padding: 20rpx;
  font-weight: 600;
}
.btm_tool {
  border-top: 1px solid #ccc;
  display: flex;
  left: 0;
  bottom: 0;
  height: 90rpx;
  position: fixed;
  background-color: #ffffff;
  width: 100%;
}
.btm_tool .tool_item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
}
.btm_tool .tool_item button {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}
.btm_tool .btn_cart {
  color: #ffffff;
  flex: 2;
  background-color: orange;
}
.btm_tool .btn_buy {
  color: #ffffff;
  flex: 2;
  background-color: red;
}
